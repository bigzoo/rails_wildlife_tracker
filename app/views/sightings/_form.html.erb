<%= render "layouts/errors", :object => @animal %>


<%= form_for [@animal,@sighting] do |f| %>
<%= f.label :date %>
<%= f.date_field :date %>
<%= f.label :longitude %>
<%= f.text_field :longitude %>
<%= f.label :latitude %>
<%= f.text_field :latitude %>
<%= f.label :region %>

<%= f.select(:region_id) do %>
  <% Region.all.each do |r| %>
    <%= content_tag(:option, r.name, value: r.id) %>
  <% end %>
<% end %><%= f.submit %>
<% end %>
